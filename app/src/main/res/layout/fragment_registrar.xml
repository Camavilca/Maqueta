<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:src="@drawable/doc" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_titulo"
            android:layout_alignParentStart="true"
            android:layout_marginStart="41dp"
            android:text="@string/titulo"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/text_titulo"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="148dp"
            android:hint="@string/titulo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_descripcion"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:text="@string/descripcion"
            android:textColor="@color/colorPrimary"
            tools:ignore="UnknownId" />

        <EditText
            android:id="@+id/text_descripcion"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/spiner_ciclo"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="245dp"
            android:hint="@string/descripcion" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="41dp"
            android:layout_alignTop="@+id/spiner_ciclo"
            android:text="@string/ciclo"
            android:textColor="@color/colorPrimary"
            tools:ignore="UnknownId" />

        <Spinner
            android:id="@+id/spiner_ciclo"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/text_titulo"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="196dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="49dp"
            android:layout_marginEnd="70dp"
            android:text="REGISTRAR"
            android:tooltipText="REGISTRAR" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="49dp"
            android:layout_marginStart="70dp"
            android:text="ARCHIVO"
            android:tooltipText="REGISTRAR" />
</RelativeLayout>